<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="/public/style.css">
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand me-5" href="#"><img src="/public/aset/logo.png" /></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active font" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active fw-bold font" aria-current="page" href="/add-my-project">Add Project</a>
                  </li>
                </ul>
                  <a href="/contact-me" class="btn btn-darkblue text-white">Contact ME</a>
                </form>
              </div>
            </div>
        </nav>

    <div class="container-form-contact d-flex align-item-center justify-content-center">
            <form action="/blog-add" method="post">
                <div class="h2 text-center fw-bold my-3 mb-5 font">ADD MY PROJECT</div>
                <div class="mb-3">
                    <label for="input-tittle" class="form-label fw-bold fs-5 font">Project Name</label>
                    <input type="text" class="form-control" id="input-tittle" placeholder="Add your project" name="tittle">
                </div>
                <div class="row g-2 mb-3">
                    <div class="col-sm">
                        <label for="start-date" class="form-label fw-bold fs-5 font">Start-date</label>
                        <input type="date" class="form-control" id="start-date" name="startDate">
                    </div>
                    <div class="col-sm">
                        <label for="end-date" class="form-label fw-bold fs-5 font">End-date</label>
                        <input type="date" class="form-control" id="end-date" name="endDate">  
                    </div>
                </div>
                <div class="mb-3">
                    <label for="input-content" class="form-label fw-bold fs-5 font">Description</label>
                    <textarea class="form-control" id="input-content" rows="3" name="content"></textarea>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="icon-1" value="option1" name="icon1">
                    <label class="form-check-label font" for="icon-1">Node JS</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input ms-5" type="checkbox" id="icon-2" value="option2" name="icon2">
                    <label class="form-check-label font" for="icon-2">Javascript</label>
                </div>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="icon-3" value="option3" name="icon3">
                    <label class="form-check-label" for="icon-3">React JS</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input ms-5" type="checkbox" id="icon-4" value="option4" name="icon4">
                    <label class="form-check-label" for="icon-4">TypeScript</label>
            </div>
        
                <div class="mb-3 mt-3">
                    <label for="formFileMultiple" class="form-label fw-bold fs-5 font">Upload Image/File</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple name="image">
                </div>
                <div class="d-flex justify-content-end mt-3 font">
                    {{#if isLogin}}
                      <button type="submit" class="btn btn-darkblue text-white">Submit</button>
                    {{/if}}
                </div>
            </form>
        </div>
    </body>
  </head>
</html>
